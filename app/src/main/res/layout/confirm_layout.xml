<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <TextView
        android:id="@+id/confirm_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        tools:text="San Diego"/>

    <ImageView
        android:id="@+id/confirm_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@id/confirm_city"
        android:layout_marginStart="24dp"
        android:contentDescription="@string/zipcode_icon_desc"
        android:scaleType="centerCrop"
        tools:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/confirm_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirm_city"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/confirm_icon"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        tools:text="63.0Â°F"/>

</RelativeLayout>